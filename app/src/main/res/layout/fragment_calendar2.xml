<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    tools:context=".CalendarFragment2"
    android:background="?android:colorBackground">

    <include
        android:id="@+id/legendLayout"
        layout="@layout/fragment_calendar2_legend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <com.kizitonwose.calendarview.CalendarView
        android:id="@+id/calendarView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:cv_dayViewResource="@layout/fragment_calendar2_day"
        app:cv_monthHeaderResource="@layout/fragment_calendar2_header"
        app:cv_hasBoundaries="true"
         />
</LinearLayout>


