<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BingoEtageLTA" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_1</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/grey_10</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_700</item>
        <item name="colorSecondaryVariant">@color/purple_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textColor">@color/white</item>
        <item name="textColorSecondary">@color/grey_2</item>
        <item name="button_background">@drawable/button_night</item>
        <item name="edit_button_icon">@drawable/ic_baseline_edit_white</item>
        <!-- Toolbar -->
        <item name="setting_icon">@drawable/ic_baseline_settings_white</item>
        <item name="calendar_icon">@drawable/ic_baseline_calendar_white</item>
    </style>

</resources>