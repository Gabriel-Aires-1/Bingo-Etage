<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToggleButtonStyle" parent="Widget.AppCompat.Button">
<!--        <item name="android:textColor">?attr/textColor</item>-->
        <item name="android:background">?attr/button_background</item>
        <item name="android:foreground">@drawable/button_ripple</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:elevation">8dp</item>
    </style>
    <style name="CalendarTextStyle" parent="@android:style/Widget.Material.Light.CalendarView">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="CalendarTextStyleDayOfWeek" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="CalendarTextStyleDay" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
    </style>
