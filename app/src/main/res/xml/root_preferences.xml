<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditTextPreference
        app:allowDividerAbove="true"
        app:allowDividerBelow="true"
        app:key="username"
        app:title="@string/username_text"
        app:useSimpleSummaryProvider="true"

        />
<!--    android:textColor="@color/teal_200"-->

    <ListPreference
        app:entries="@array/theme_entries"
        app:entryValues="@array/theme_values"
        app:defaultValue="system"
        app:key="theme_preference"
        app:title="@string/theme_title"
        app:useSimpleSummaryProvider="true"
        app:allowDividerAbove="true"
        app:allowDividerBelow="true"
        />
<!--    app:textColor="?attr/textColor"-->

    <ListPreference
        app:entries="@array/number_floors_entries"
        app:entryValues="@array/number_floors_values"
        app:defaultValue="10"
        app:key="number_floors"
        app:title="@string/number_floors_title"
        app:useSimpleSummaryProvider="true"
        app:allowDividerAbove="true"
        app:allowDividerBelow="true"
        />

</PreferenceScreen>